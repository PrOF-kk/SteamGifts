<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/intro_giveaway_indicators_header"
        android:textAppearance="?android:textAppearance"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/intro_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:padding="8dp">

        <include
            android:id="@+id/giveaway"
            layout="@layout/giveaway_item" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:gravity="center"
        android:paddingLeft="64dp"
        android:paddingRight="64dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/faw_unlock"
                    app:iiv_color="@color/giveawayIndicatorColorWhitelist"
                    style="@style/GiveawayIndicatorIcon"
                    tools:tint="@color/giveawayIndicatorColorWhitelist"
                    tools:src="@drawable/circle_indicator_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/intro_giveaway_indicators_whitelist"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/faw_users"
                    app:iiv_color="@color/giveawayIndicatorColorGroup"
                    style="@style/GiveawayIndicatorIcon"
                    tools:tint="@color/giveawayIndicatorColorGroup"
                    tools:src="@drawable/circle_indicator_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/intro_giveaway_indicators_group"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/faw_lock"
                    app:iiv_color="@color/giveawayIndicatorColorPrivate"
                    style="@style/GiveawayIndicatorIcon"
                    tools:tint="@color/giveawayIndicatorColorPrivate"
                    tools:src="@drawable/circle_indicator_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/intro_giveaway_indicators_private"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/faw_arrow_down"
                    app:iiv_color="@color/giveawayIndicatorColorLevelOkay"
                    style="@style/GiveawayIndicatorIcon"
                    tools:tint="@color/giveawayIndicatorColorLevelOkay"
                    tools:src="@drawable/circle_indicator_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/intro_giveaway_indicators_level_positive"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/faw_arrow_up"
                    app:iiv_color="@color/giveawayIndicatorColorLevelTooHigh"
                    style="@style/GiveawayIndicatorIcon"
                    tools:tint="@color/giveawayIndicatorColorLevelTooHigh"
                    tools:src="@drawable/circle_indicator_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/intro_giveaway_indicators_level_negative"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikepenz.iconics.view.IconicsImageView
                    app:iiv_icon="@string/faw_globe"
                    app:iiv_color="@color/giveawayIndicatorColorRegionRestricted"
                    style="@style/GiveawayIndicatorIcon"
                    tools:tint="@color/giveawayIndicatorColorRegionRestricted"
                    tools:src="@drawable/circle_indicator_blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/intro_giveaway_indicators_region_restricted"
                    android:textAppearance="?android:textAppearance"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="64dp" />
</LinearLayout>